<div class="mt-10 sm:mt-0">
        <div class="mt-5 md:mt-0 md:col-span-2">
            {{ form_start(form) }}
                <div class="shadow overflow-hidden sm:rounded-md">
                    <div class=" bg-white ">

                        <div class="px-4 py-5 sm:p-6">
                            <div class="grid grid-cols-6 gap-6">
                                <div class="col-span-6 sm:col-span-3">
                                    {{ form_label(form.title, 'Title', {'label_attr': {'class': 'block text-sm font-medium text-gray-700' }}) }}
                                    {{ form_widget(form.title, { 'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow sm:text-sm border-gray-300 rounded-md p-2', 'placeholder': 'Title of your news...'}}) }}
                                </div>

                                <div class="col-span-6 sm:col-span-3">
                                    {{ form_label(form.place, 'Place', {'label_attr': {'class': 'block text-sm font-medium text-gray-700' }}) }}
                                    {{ form_widget(form.place, { 'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow sm:text-sm border-gray-300 rounded-md p-2', 'placeholder': 'Place concerned...'}}) }}
                                </div>

                                <div class="col-span-6">
                                    <label class="block text-sm font-medium text-gray-700"> Cover photo </label>
                                    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
                                        <div class="space-y-1 text-center">
                                            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                                                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                            <div class="flex text-sm text-gray-600">
                                                <div for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                                                    {{ form_row(form.img, { 'attr': {'class': 'sr-only', 'id': 'file-upload'}}) }}
                                                </div>
                                                <p class="pl-1">or drag and drop</p>
                                            </div>
                                            <p class="text-xs text-gray-500">PNG and JPG up to 5MB</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-span-6">
                                    {{ form_label(form.text, 'Article', {'label_attr': {'class': 'block text-sm font-medium text-gray-700' }}) }}
                                    {{ form_widget(form.text, { 'attr': {'class': 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md', 'placeholder': 'Place concerned...'}}) }}
                                </div>

                            </div>
                        </div>

                    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-success-orange/70 hover:bg-success-orange focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-success-orange">{{ button_label|default('Save') }}</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>